{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "express", "./src/types"] // Include your custom types folder here
  },
  "include": ["src", "types", "types"], // Include your custom types folder
  "exclude": ["node_modules"]
}
